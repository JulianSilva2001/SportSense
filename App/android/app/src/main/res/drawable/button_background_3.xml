<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#8800C8FA"
                android:endColor="#8868E0DC"
                android:type="linear"/>
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#5500C8FA"
                android:endColor="#5548D1DD"
                android:type="linear"/>
            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>
